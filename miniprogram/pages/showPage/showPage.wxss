@import "../../style/loader.wxss";

page {
  background-size: cover;
}

.badge {
  width: 128rpx;
  height: 128rpx;
  border-radius: 28rpx;
  background-size: cover;
  background-color: transparent;
}

.show-banner {
  padding: 18rpx 0;
  background-color: transparent;
}

.show-text {
  font-size: 34rpx;
  margin: 4rpx 0;
}

.show-text-sub {
  font-size: 28rpx;
  margin: 2rpx 0;
  color: #585858;
}

.summary-stats-section {
  padding: 28rpx;
}

.summary-stats-container {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  background-color: white;
}

.summary-stats-card {
  height: 100%;
  padding: 38rpx 0;
}

.summary-title {
  text-align: center;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  font-size: 32rpx;
}

.summary-stats-box {
  padding: 18rpx 0 0 0;
}

.stats-box {
  flex: 1;
  padding: 0 12rpx;
  margin: 0 8rpx;
}

.stats-title {
  margin-top: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #585858;
}

.stats-title-black {
  text-align: center;
  font-size: 28rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.stats {
  margin-top: 8rpx;
  text-align: center;
  font-size: 32rpx;
  /* color: #373a6d; */
}

.stats-image {
  height: 68rpx;
  width: 68rpx;
}

.stats-btn-left {
  margin: 0 20rpx 0 60rpx;
}

.stats-btn-right {
  margin: 0 60rpx 0 20rpx;
}

.adv {
  width: 616rpx;
  height: 220rpx;
}
