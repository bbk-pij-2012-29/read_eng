@import "../../style/loader.wxss";

.swiper{
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.scroll-view-x{
  display:flex;
  flex-direction: row;
  white-space: nowrap;
  width: 100%;
  height: 160rpx;
  align-items: center;
}

.scroll-view-feature-x{
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #f85415;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
}

.scroll-view-x-interest{
  display: inline-block;
  width: 20%;
  margin-top: 30rpx; 
  border-radius: 20rpx;
}

.interest-tag{
  display: flex; 
  flex-direction: column; 
  align-items: center;
}

